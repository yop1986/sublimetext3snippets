<snippet>
	<content><![CDATA[
USE master
IF EXISTS (SELECT * FROM sys.databases WHERE name = '${1:db_nombre}')
	DROP DATABASE ${1:db_nombre};
GO

CREATE DATABASE ${1:db_nombre};
GO

USE ${1:db_nombre}
GO

]]></content>
	<!-- Optional: Set a tabTrigger to define how to trigger the snippet -->
	<tabTrigger>create-database (sql)</tabTrigger>
	<!-- Optional: Set a scope to limit where the snippet will trigger -->
	<scope>source.sql</scope>
</snippet>
